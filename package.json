{
  "name": "wecom-group-robot",
  "description": "Send a message through a WeCom group robot from GitHub Actions.",
  "version": "1.0.1",
  "author": "Mean",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/MeanZhang/wecom-group-robot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MeanZhang/wecom-group-robot.git"
  },
  "bugs": {
    "url": "https://github.com/MeanZhang/wecom-group-robot/issues"
  },
  "keywords": [
    "actions",
    "WeCom"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm format:write && pnpm package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "package -- --watch",
    "test": "jest",
    "all": "pnpm format:write && pnpm lint && pnpm test && pnpm coverage && pnpm package",
    "prepare": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "axios": "^1.8.4",
    "form-data": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@github/local-action": "^3.1.3",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.28",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vercel/ncc": "^0.38.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.38.0",
    "ts-jest": "^29.3.0",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.8.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "packageManager": "pnpm@10.7.1"
}
